{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TickCheck",
  "version": "0.1.0",
  "identifier": "com.tickcheck.app", 
  "build": {
    "frontendDist": "../client/dist", 
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:client",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "TickCheck",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}