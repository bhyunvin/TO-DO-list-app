  "scripts": {
    "build": "bun build src/main.ts --outdir dist --target bun",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bun --bun src/main.ts",
    "dev": "bun --watch src/main.ts",
    "start:dev": "bun --watch src/main.ts",
    "start:debug": "bun --inspect --watch src/main.ts",
    "start:prod": "bun --bun dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bun test --env-file=../.env.test",
    "test:watch": "bun test --watch --env-file=../.env.test",
    "test:cov": "bun test --coverage --env-file=../.env.test"
